{
  "compilerOptions": {
    "target": "ES2017",
    "lib": ["dom", "dom.iterable", "esnext"],
    "allowJs": true,
    "skipLibCheck": true,
    "strict": true,
    "noEmit": true,
    "esModuleInterop": true,
    "module": "esnext",
    "moduleResolution": "bundler",
    "resolveJsonModule": true,
    "isolatedModules": true,
    "jsx": "preserve",
    "incremental": true,
    "plugins": [
      {
        "name": "next"
      }
    ],
    "paths": {
      "_/*": ["./src/*"],
      "_app/*": ["./src/app/*"],
      "_assets/*": ["./public/assets/*"],
      "_components/*": ["./src/components/ui/*"],
      "_private/*": ["./src/app/private/*"],
      "_utils/*": ["./src/app/utils/*"],
      "_theme/*": ["./src/app/theme/*"],
      "_store/*": ["./src/store/*"]
    }
  },
  "include": ["next-env.d.ts", "**/*.ts", "**/*.tsx", ".next/types/**/*.ts"],
  "exclude": ["node_modules"]
}
